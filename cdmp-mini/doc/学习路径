# 列出所有消费者组
./kafka-consumer-groups.sh --bootstrap-server 127.0.0.1:9092 --list
user-create-group
user-update-group
user-delete-group
user-group
user-retry-group

# 查看 user_retry_consumer_group 组对 user.retry.v1 主题的消费进度
./kafka-consumer-groups.sh --bootstrap-server 127.0.0.1:9092 --group user-retry-group --describe

./kafka-consumer-groups.sh --bootstrap-server 127.0.0.1:9092 --group user-create-group --describe