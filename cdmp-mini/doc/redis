sudo pkill -9 redis-server
sleep 2
sudo redis-cluster-ctl start

# 启动集群
sudo redis-cluster-ctl start

# 停止集群  
sudo redis-cluster-ctl stop

# 查看状态
sudo redis-cluster-ctl status

# 检查NUMA绑定
sudo redis-cluster-ctl numa-check

# 集群管理
redis-cli -p 6379 cluster info      # 集群信息
redis-cli -p 6379 cluster nodes     # 节点列表
redis-cli -p 6379 cluster slots     # 槽位分布


# 逐个连接到每个端口并安全关闭
for port in 6379 6380 6381; do
    echo "正在关闭端口 $port 的 Redis 服务..."
    redis-cli -p $port SHUTDOWN SAVE
    sleep 2
done

sudo redis-cluster-ctl start
ps aux | grep redis-server
redis-cli -p 6379 ping

sudo tee /usr/local/bin/redis-cluster-ctl

使用NUMA优化的启动
 sudo systemctl restart redis_exporter.service
  检查服务文件语法
sudo systemd-analyze verify /etc/systemd/system/redis-exporter.service

在笔记本启动新的节点
sudo /usr/local/bin/redis-node-ctl start
sleep 3
sudo /usr/local/bin/redis-node-ctl status

# 检查所有节点状态
sudo /usr/local/bin/redis-cluster-ctl status

# 查看集群详细信息
sudo /usr/local/bin/redis-cluster-ctl cluster-status

# 管理远程节点
sudo /usr/local/bin/redis-cluster-ctl remote-status
sudo /usr/local/bin/redis-cluster-ctl remote-stop
sudo /usr/local/bin/redis-cluster-ctl remote-start